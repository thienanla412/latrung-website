# Environment Configuration for La TRUNG Website
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Environment (development, staging, production)
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_NAME=latrung_website
DB_USER=your_database_username
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# Email Configuration
MAIL_FROM_EMAIL=info@latrungprint.vn
MAIL_FROM_NAME="La TRUNG Printing & Packaging"
MAIL_TO_EMAIL=info@latrungprint.vn

# SMTP Configuration (optional - leave empty to use PHP mail())
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ENCRYPTION=tls

# Security
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict
CSRF_TOKEN_EXPIRE=3600

# Rate Limiting (contact form)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=3
RATE_LIMIT_WINDOW=3600

# Site Configuration
SITE_URL=https://www.latrungprint.vn
SITE_NAME="La TRUNG Printing & Packaging"

# Logging
LOG_ENABLED=true
LOG_PATH=logs/
LOG_LEVEL=error
